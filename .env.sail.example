# =============================================================================
# Entorno para desarrollo con Docker Sail (PesquerApp)
# Uso: cp .env.sail.example .env  (o fusionar manualmente con tu .env)
# =============================================================================

APP_NAME=PesquerApp
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
# Si el puerto 80 está ocupado (ej. WSL): APP_PORT=8000 y APP_URL=http://localhost:8000
# El frontend debe usar esa misma URL como base de la API (ej. NEXT_PUBLIC_API_URL=http://localhost:8000).

# URL del frontend (magic link). En local puede ser http://localhost:3000
FRONTEND_URL=http://localhost:3000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Base de datos - Docker Sail (contenedor mysql)
# -----------------------------------------------------------------------------
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=pesquerapp
DB_USERNAME=sail
DB_PASSWORD=password

# -----------------------------------------------------------------------------
# Redis - Docker Sail (contenedor redis)
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Cache, cola y sesión con Redis (recomendado con Sail)
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

BROADCAST_DRIVER=log
FILESYSTEM_DISK=local

MEMCACHED_HOST=127.0.0.1

# -----------------------------------------------------------------------------
# Mail - Mailpit (contenedor mailpit)
# -----------------------------------------------------------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@pesquerapp.local"
MAIL_FROM_NAME="${APP_NAME}"

# -----------------------------------------------------------------------------
# Sanctum - dominios stateful para SPA (Next.js en local)
# -----------------------------------------------------------------------------
SANCTUM_STATEFUL_DOMAINS=localhost:3000,127.0.0.1:3000

# -----------------------------------------------------------------------------
# Opcional: puertos expuestos (por defecto Sail usa 80; si 80 está ocupado, usar 8000)
# -----------------------------------------------------------------------------
# APP_PORT=8000
# FORWARD_DB_PORT=3306
# FORWARD_REDIS_PORT=6379
# FORWARD_MAILPIT_PORT=1025
# FORWARD_MAILPIT_DASHBOARD_PORT=8025

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
